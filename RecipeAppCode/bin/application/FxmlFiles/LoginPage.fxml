<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="325.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginPageController">
   <children>
      <TextField fx:id="emailInput" alignment="CENTER" maxHeight="25.0" maxWidth="225.0" promptText="e-mail" styleClass="userInput">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="passwordInput" alignment="CENTER" maxHeight="25.0" maxWidth="225.0" promptText="password" styleClass="userInput">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </PasswordField>
      <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#userLogin" prefHeight="30.0" prefWidth="80.0" styleClass="submitButton" text="Login">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="errorLabel" text="Label" textFill="RED" visible="false" />
   </children>
</VBox>
